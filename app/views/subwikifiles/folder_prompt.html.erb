<div class="box">
  <h2><%= l('redmine_subwikifiles.folder_detection.new_folder_found') %></h2>
  
  <% if @folder %>
    <div class="folder-info">
      <p><strong><%= l('redmine_subwikifiles.folder_detection.folder_path') %>:</strong></p>
      <code class="folder-path"><%= @folder[:relative_path] || @folder[:name] %></code>
      
      <% if @project %>
        <div class="folder-details">
          <p><strong><%= l('redmine_subwikifiles.folder_detection.parent_project') %>:</strong> <%= @project.name %></p>
        </div>
      <% end %>
    </div>
    
    <h3><%= l('redmine_subwikifiles.folder_detection.choose_action') %></h3>
    
    <div class="folder-actions">
      <%= form_tag(@project ? project_subwikifiles_assign_folder_path(@project) : global_subwikifiles_assign_folder_path, method: :post) do %>
        <%= hidden_field_tag :folder_path, @folder[:path] %>
        <%= hidden_field_tag :folder_name, @folder[:name] %>
        
        <div class="action-option">
          <h4>1. <%= l('redmine_subwikifiles.actions.create_subproject') %></h4>
          <p class="description"><%= l('redmine_subwikifiles.actions.create_subproject_desc') %></p>
          <%= submit_tag l('redmine_subwikifiles.actions.create_subproject'), 
                         name: 'action_type', 
                         value: 'subproject', 
                         class: 'btn-primary' %>
        </div>

        <div class="action-option orphan-option">
          <h4>2. <%= l('redmine_subwikifiles.actions.orphan') %></h4>
          <p class="description"><%= l('redmine_subwikifiles.actions.orphan_desc') %></p>
          <%= submit_tag l('redmine_subwikifiles.actions.orphan'), 
                         name: 'action_type', 
                         value: 'orphan', 
                         class: 'btn-secondary',
                         data: { confirm: l('redmine_subwikifiles.orphan.confirm', name: @folder[:name]) } %>
        </div>
      <% end %>
    </div>
    
    <% if @all_unassigned.size > 1 %>
      <p class="remaining-folders">
        <%= l('redmine_subwikifiles.folder_detection.remaining_count', count: @all_unassigned.size - 1) %>
      </p>
    <% end %>
  <% else %>
    <p><%= l('redmine_subwikifiles.no_unassigned_folders') %></p>
  <% end %>
</div>

<style>
  .folder-info {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 5px;
    margin: 15px 0;
  }
  
  .folder-path {
    display: block;
    background: #fff;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 3px;
    font-family: monospace;
    margin: 10px 0;
  }
  
  .folder-details {
    margin-top: 10px;
    font-size: 0.9em;
    color: #666;
  }
  
  .folder-actions {
    margin: 20px 0;
  }
  
  .action-option {
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 5px;
    padding: 15px;
    margin: 15px 0;
    transition: border-color 0.2s;
  }
  
  .action-option:hover {
    border-color: #4a90e2;
  }
  
  .action-option h4 {
    margin-top: 0;
    color: #333;
  }
  
  .action-option .description {
    color: #666;
    margin: 10px 0;
  }

  .orphan-option {
    border-color: #6c757d;
  }

  .orphan-option:hover {
    border-color: #5a6268;
    background: #f8f9fa;
  }
  
  .btn-primary, .btn-secondary {
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;
    transition: background 0.2s;
    color: #fff !important;
    text-decoration: none !important;
  }
  
  .btn-primary {
    background: #28a745;
  }
  
  .btn-primary:hover {
    background: #218838;
  }

  .btn-secondary {
    background: #6c757d;
  }

  .btn-secondary:hover {
    background: #5a6268;
  }
  
  .remaining-folders {
    margin-top: 20px;
    padding: 10px;
    background: #d1ecf1;
    border-left: 3px solid #17a2b8;
    font-size: 0.9em;
    color: #0c5460;
  }
</style>
