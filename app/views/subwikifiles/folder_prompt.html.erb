<div class="box">
  <h2><%= l('redmine_subwikifiles.folder_detection.new_folder_found') %></h2>
  
  <% if @folder %>
    <div class="folder-info">
      <p><strong><%= l('redmine_subwikifiles.folder_detection.folder_path') %>:</strong></p>
      <code class="folder-path"><%= @folder[:relative_path] %></code>
      
      <% if @folder[:misplaced] %>
        <div class="flash warning">
          ⚠️ <%= l('redmine_subwikifiles.folder_detection.misplaced_warning') %>
          <br>
          <em><%= l('redmine_subwikifiles.folder_detection.auto_fix_info') %></em>
        </div>
      <% end %>
      
      <div class="folder-details">
        <p><strong><%= l('redmine_subwikifiles.folder_detection.parent_project') %>:</strong> <%= @folder[:parent_project].name %></p>
        <p><strong><%= l('redmine_subwikifiles.folder_detection.depth') %>:</strong> <%= @folder[:depth] %></p>
      </div>
    </div>
    
    <h3><%= l('redmine_subwikifiles.folder_detection.choose_action') %></h3>
    
    <div class="folder-actions">
      <%= form_tag project_subwikifiles_assign_folder_path(@project), method: :post do %>
        <%= hidden_field_tag :folder_path, @folder[:path] %>
        <%= hidden_field_tag :folder_name, @folder[:name] %>
        <%= hidden_field_tag :parent_project_id, @folder[:parent_project].id %>
        <%= hidden_field_tag :misplaced, @folder[:misplaced] %>
        
        <div class="action-option">
          <h4>1. <%= l('redmine_subwikifiles.actions.create_subproject') %></h4>
          <p class="description"><%= l('redmine_subwikifiles.actions.create_subproject_desc') %></p>
          <% if @folder[:misplaced] %>
            <p class="auto-fix-notice">
              ℹ️ <%= l('redmine_subwikifiles.folder_detection.will_auto_move') %>
            </p>
          <% end %>
          <%= submit_tag l('redmine_subwikifiles.actions.create_subproject'), 
                         name: 'action_type', 
                         value: 'subproject', 
                         class: 'btn-primary' %>
        </div>
        
        <div class="action-option quarantine-option">
          <h4>2. <%= l('redmine_subwikifiles.actions.quarantine') %></h4>
          <p class="description"><%= l('redmine_subwikifiles.actions.quarantine_desc') %></p>
          <%= submit_tag l('redmine_subwikifiles.actions.quarantine'), 
                         name: 'action_type', 
                         value: 'quarantine', 
                         class: 'btn-danger',
                         data: { confirm: l('redmine_subwikifiles.quarantine.confirm', name: @folder[:name]) } %>
        </div>
      <% end %>
    </div>
    
    <p class="remaining-folders">
      <%= l('redmine_subwikifiles.folder_detection.remaining_count', count: @all_unassigned.size - 1) %>
    </p>
  <% end %>
</div>

<style>
  .folder-info {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 5px;
    margin: 15px 0;
  }
  
  .folder-path {
    display: block;
    background: #fff;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 3px;
    font-family: monospace;
    margin: 10px 0;
  }
  
  .folder-details {
    margin-top: 10px;
    font-size: 0.9em;
    color: #666;
  }
  
  .folder-actions {
    margin: 20px 0;
  }
  
  .action-option {
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 5px;
    padding: 15px;
    margin: 15px 0;
    transition: border-color 0.2s;
  }
  
  .action-option:hover {
    border-color: #4a90e2;
  }
  
  .action-option h4 {
    margin-top: 0;
    color: #333;
  }
  
  .action-option .description {
    color: #666;
    margin: 10px 0;
  }
  
  .quarantine-option {
    border-color: #ff9800;
  }
  
  .quarantine-option:hover {
    border-color: #f44336;
    background: #fff8f8;
  }
  
  .auto-fix-notice {
    background: #e3f2fd;
    padding: 8px 12px;
    border-left: 3px solid #2196f3;
    margin: 10px 0;
    font-size: 0.9em;
  }
  
  .btn-primary, .btn-secondary, .btn-danger {
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.2s;
  }
  
  .btn-primary {
    background: #4caf50;
    color: white;
  }
  
  .btn-primary:hover {
    background: #45a049;
  }
  
  .btn-secondary {
    background: #2196f3;
    color: white;
  }
  
  .btn-secondary:hover {
    background: #0b7dda;
  }
  
  .btn-danger {
    background: #ff9800;
    color: white;
  }
  
  .btn-danger:hover {
    background: #f44336;
  }
  
  .remaining-folders {
    margin-top: 20px;
    padding: 10px;
    background: #fff9c4;
    border-left: 3px solid #fbc02d;
    font-size: 0.9em;
  }
</style>
